# ==================================
# ChainTrace Environment Configuration
# ==================================
# Copy this file to .env.local and fill in the actual values
# For production deployment, configure these in Vercel dashboard

# ==================================
# Hedera Network Configuration
# ==================================
# Network type: 'testnet' or 'mainnet'
NEXT_PUBLIC_HEDERA_NETWORK=testnet

# Mirror Node API endpoint for blockchain data queries
NEXT_PUBLIC_MIRROR_NODE_URL=https://testnet.mirrornode.hedera.com

# Hedera operator account ID (format: 0.0.xxxxx)
HEDERA_ACCOUNT_ID=0.0.12345

# Hedera operator private key (DER encoded hex string)
# WARNING: Never commit real private keys to version control
HEDERA_PRIVATE_KEY=your-private-key-here

# HashConnect wallet configuration
NEXT_PUBLIC_HASHCONNECT_PROJECT_ID=chaintrace-supply-chain
NEXT_PUBLIC_HASHCONNECT_DEBUG=false

# ==================================
# Supabase Database Configuration  
# ==================================
# Supabase project URL
SUPABASE_URL=https://your-project-id.supabase.co

# Supabase anonymous public key
SUPABASE_ANON_KEY=your-supabase-anon-key

# Supabase service role key (server-side only)
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-key

# ==================================
# Custom Compliance Engine
# ==================================
# Guardian API endpoint for compliance validation
GUARDIAN_API_URL=https://guardian-api.hedera.com

# Guardian API key for authentication
GUARDIAN_API_KEY=your-guardian-api-key

# ==================================
# Application Configuration
# ==================================
# Application URL (used for callbacks and CORS)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# JWT secret for session management
JWT_SECRET=your-jwt-secret-key

# ==================================
# Optional Services
# ==================================
# Vercel Analytics (if using Vercel Analytics)
VERCEL_ANALYTICS_ID=your-vercel-analytics-id

# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn

# ==================================
# Development/Testing Configuration
# ==================================
# Enable debug logging in development
DEBUG=true

# Test account IDs for development
TEST_ACCOUNT_1=0.0.11111
TEST_ACCOUNT_2=0.0.22222

# ==================================
# Security Configuration
# ==================================
# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://your-domain.com

# Rate limiting (requests per minute)
RATE_LIMIT_RPM=100